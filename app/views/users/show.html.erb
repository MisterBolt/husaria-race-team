<% provide(:title, 'User profile') %>
<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
      <h1>
        <%= @user.name %>
        <%= @user.email %>
        <%= Time.now %>
        <% if current_user.admin? && !@user.admin? %>
          <%= link_to "Give admin privileges", make_admin_user_path(@user),
                      class: 'btn btn-danger', method: :patch %>
        <% end %>
      </h1>
    </section>
  </aside>
</div>